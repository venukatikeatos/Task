<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Page1" NavigationPage.HasNavigationBar="False">
    <ScrollView>
    <StackLayout Padding="10,10,10,10">
        <Button Grid.Row="0" Grid.Column="0" ImageSource="back" HorizontalOptions="Start" 
                WidthRequest="50" BackgroundColor="Transparent" CornerRadius="15"
                Clicked="Button_Clicked_3"/>
        <StackLayout>
            <Label Text="Upload Your Photo Profile"
               FontSize="35"
               FontAttributes="Bold"
               HorizontalOptions="Center" />
        </StackLayout>
        <StackLayout>
            <Label Text="This data will be displayed in your account profile for Security"
               FontSize="20"
               HorizontalOptions="Center" />
        </StackLayout>

            <StackLayout Padding="90,40,90,70">
                <Image x:Name="MyImage"/>
            </StackLayout>
            <StackLayout Padding="50,30,50,30">
                <Button Text="Next" BackgroundColor="#32C72D " TextColor="White" CornerRadius="15" Clicked="Button_Clicked">
            </Button>
        </StackLayout>

    </StackLayout>
    </ScrollView>
</ContentPage>